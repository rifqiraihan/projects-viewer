{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",  // or "ESNext"
    "lib": ["ES2022"],    // or "ESNext"
    "module": "Node16",  // Set to Node16 for Node.js compatibility
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node16",  // Use node16 for modern module resolution
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Vite specific */
    "types": ["vite/client", "node"]
  },
  "include": ["vite.config.ts"]
}
